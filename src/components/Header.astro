---
import { menuItems, config } from "@/constants";
import ThemeToggle from "./ThemeToggle.astro";

const url = new URL(Astro.request.url);
---

<header id="main-header" class="group relative mb-20 flex items-center">
  <div class="flex flex-col">
    <a tabindex="-1" class="text-xl font-bold sm:text-2xl" href="/">
      {config.title}
    </a>
    <nav
      id="navigation-menu"
      class="-ms-4 mt-1 flex flex-row items-center divide-x-2 divide-dotted divide-primary font-semibold text-primary"
      aria-label="Main menu"
    >
      {
        menuItems.map(({ title, path }) => (
          <a href={path} class="px-4 hover:underline" rel="prefetch">
            {title}
          </a>
        ))
      }
    </nav>
  </div>
  <ThemeToggle />
</header>
