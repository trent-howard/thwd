---
import { MENU_ITEMS } from "../constants";

const url = new URL(Astro.request.url);
---

<header id="main-header" class="group relative mb-20 flex items-center">
  <div class="flex flex-col">
    <a href="/">
      <span class="text-xl font-bold sm:text-2xl">thwd.dev</span>
    </a>
    <nav
      id="navigation-menu"
      class="-ms-4 mt-1 flex flex-row items-center divide-x divide-dashed divide-gray-800 font-semibold"
      aria-label="Main menu"
    >
      {
        MENU_ITEMS.map(({ title, path }) => (
          <a href={path} class="px-4 hover:underline">
            {title}
          </a>
        ))
      }
    </nav>
  </div>
</header>
